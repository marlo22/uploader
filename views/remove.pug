html
  include includes/head
  body
    include includes/header
    div.container
      div.row.mt-3
        div.col-8
          span.h1 #{subtitle}
          hr
          if status === 'success'
            p.alert.alert-success.mt-2 #{locales.removeFile.deleteSuccess}
          else if status === 'failed'
            p.alert.alert-danger.mt-2 #{locales.removeFile.removeFile}
          form(action="/remove" method="POST")
            div.form-group.mt-3
              label(for="fileUrl")
                span #{locales.removeFile.idOfFileToDelete}
                br
                small.text-muted #{locales.removeFile.idOfFileToDeleteDescription}
              input.form-control#fileUrl(name="id")
            div.form-group.mt-3
              label(for="deleteCode")
                span #{locales.removeFile.accessCode}
                br
                small.text-muted #{locales.removeFile.accessCodeDescription}
              input.form-control#deleteCode(name="deleteCode")
            button.btn.btn-info.mt-1#deleteFileBtn(type="submit" disabled)= locales.removeFile.deleteText
          include includes/scripts
        div.col-4
          include includes/sidebar
      include includes/footer